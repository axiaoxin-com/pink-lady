[server]
mode = "debug"
bind = "localhost:4869"
sentrydsn = ""

[logger]
level = "debug"
format = "json"
outputPaths = ["stderr", "/tmp/pink-lady.log"]
disableCaller = false
disableStacktrace = false
logRequestInfo = true

[database]
sqlite3 = [
    {
        instance = "default",
        dbname = "/tmp/pink-lady.db",
        maxIdleConns = 2,  # 设置连接池中的最大闲置连接数
        maxOpenConns = 0,  # 设置数据库的最大连接数量
        connMaxLifeMinutes = 60,  # 设置连接的最大可复用时间
        logMode = true
    },
    {
        instance = "another",
        dbname = "/tmp/another-pink-lady.db",
        maxIdleConns = 2,  # 设置连接池中的最大闲置连接数
        maxOpenConns = 0,  # 设置数据库的最大连接数量
        connMaxLifeMinutes = 60,  # 设置连接的最大可复用时间
        logMode = true
    }
]

mysql = [
    {
        instance = "default",
        host = "127.0.0.1",
        port = 3306,
        dbname = "test",
        username = "root",
        password = "roooooot",
        maxIdleConns = 2,
        maxOpenConns = 0,
        connMaxLifeMinutes = 60,
        logMode = true
    }
]

postgres = [
